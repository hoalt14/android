<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Products"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="#fbc531"
        android:gravity="center"
        android:padding="10dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtEditProductName"
        android:hint="Edit name"
        android:textSize="30sp"
        android:layout_margin="5dp"
        android:paddingTop="10dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtEditProductManufacturer"
        android:hint="Edit manufacturer"
        android:textSize="30sp"
        android:layout_margin="5dp"
        android:paddingTop="10dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtEditProductPrice"
        android:hint="Edit price"
        android:textSize="30sp"
        android:layout_margin="5dp"
        android:paddingTop="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="center" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:textSize="26sp"
            android:id="@+id/btnEdit" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textSize="26sp"
            android:id="@+id/btnCancelEdit" />

    </LinearLayout>

</LinearLayout>